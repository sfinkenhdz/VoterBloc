<div class="main-container"></div>
<%= render "../views/navbar" %>

<h2 class="team-name"><%= @team.name %></h2>

<div class="election">
  <p>Target Election: </p>
  <p>Days till Election Day: </p>
</div>

<div class="goal">
  <p>Goal: <%= @team.membership_goal %></p>
  <p>Percent to goal: <%= @team.percent_to_goal %>%</p>
</div>

<div class="members">
  <p>
    Members:
  </p>
  <% @team.memberships.each do |membership| %>
    <strong>Username:</strong> <%= membership.user.username %>
    <br>
    <strong>Status:</strong> <%= membership.user.registered %>
    <br>
    <strong>Has voted? (after early voting starts):</strong> <% membership.user.votes.each do |vote| %>
      <% if vote.election_id == @team.participations.first.election_id %>
          <p>Yes</p>
        <% else %>
          <p>wahhhhhhhhhhhhhhhhhhhhh ;_; no</p>
      <% end %>
    <% end %>
  <% end %>
</div>

<br>

<div class="invited">
  <% @team.invitations.each do |invitation| %>
    <p><%= invitation.user.username %></p>
  <% end %>
</div>

<div class="declined">

</div>

<div>
Invite more members.
</div>
